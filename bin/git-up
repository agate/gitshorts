#!/bin/bash

CURRENT_DIR=`pwd`
ROOT_DIR=`git rev-parse --show-toplevel`
CURRENT_BRANCH=`git branch | grep '^\*' | sed 's/^\** *//'`
BRANCHS=`git branch | sed 's/^\** *//'`

cd $ROOT_DIR

git fetch

for branch in $BRANCHS
do
  git checkout $branch
  git rebase origin/$branch
done

git checkout $CURRENT_BRANCH

cd $CURRENT_DIR
